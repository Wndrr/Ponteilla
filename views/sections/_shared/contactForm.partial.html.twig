<form id="contactForm" class="form-horizontal">
	<fieldset>
		<!-- Form Name -->
		<legend>
			Contact
		</legend>

		<!-- Text input-->
		<div class="form-group">
		    <label class="col-md-2 control-label" for="lastName">Nom</label>    
		    <div class="col-md-8">
		    	<input id="lastName" name="lastName" placeholder="" class="form-control input-md" required="" type="text">						        
		    </div>
		</div>

		<!-- Text input-->
		<div class="form-group">
		    <label class="col-md-2 control-label" for="firstName">Prénom</label>    
		    <div class="col-md-8">
		    	<input id="firstName" name="firstName" placeholder="" class="form-control input-md" required="" type="text">						        
		    </div>
		</div>

		<!-- Text input-->
		<div id="emailBlock" class="form-group">
		    <label class="col-md-2 control-label" for="email">E-mail</label>    
		    <div class="col-md-8">
		    	<input id="email" name="email" placeholder="" class="form-control input-md" required="" type="text">						        
		    </div>
		</div>

		<!-- Multiple Checkboxes -->
		<div id="sectionsCheckboxes" class="form-group">
		    <label class="col-md-2 control-label" for="section">Activités</label>
		    <div class="col-md-8">
		    	<div class="col-md-5 col-md-offset-1">
				    <div class="checkbox">
			        <label for="section-0">
			            <input name="section[]" id="section-0" value="nordWalking" type="checkbox">
			            Marche nordique
			        </label>
					</div>
				    <div class="checkbox">
				        <label for="section-1">
				            <input name="section[]" id="section-1" value="hiking" type="checkbox">
				            Randonnée pédestre
				        </label>
					</div>
		    		 <div class="checkbox">
				        <label for="section-6">
				            <input name="section[]" id="section-6" value="relaxation" type="checkbox">
				            Relaxation HappyRelax
				        </label>
					</div>
		    	</div>
		    	<div class="col-md-5 col-md-offset-1">
		    		 <div class="checkbox">
				        <label for="section-2">
				            <input name="section[]" id="section-2" value="tableTennis" type="checkbox">
				            Tennis de table
				        </label>
					</div>
				    <div class="checkbox">
				        <label for="section-3">
				            <input name="section[]" id="section-3" value="archery" type="checkbox">
				            Tir à l'arc
				        </label>
					</div>
				    <div class="checkbox">
				        <label for="section-4">
				            <input name="section[]" id="section-4" value="teens" type="checkbox">
				            Point ados
				        </label>
					</div>
		    	</div>
		    	<div class="col-md-5 col-md-offset-4">
		    		 <div class="checkbox">
				        <label for="section-5">
				            <input name="section[]" id="section-5" value="other" type="checkbox">
				            Autre
				        </label>
					</div>
		    	</div>
		    </div>
			<div class="help-block with-errors col-md-8 col-md-offset-2">
				Au moins une activité doit être sélectionnée
			</div>
		</div>

		<!-- Textarea -->
		<div class="form-group">
		    <label class="col-md-2 control-label" for="message">Message</label>
		    <div class="col-md-8">                                         
		        <textarea class="form-control" id="message" name="message"></textarea>
		    </div>
		</div>

		<!-- Button -->
		<div class="form-group">
		    <button id="send" name="send" class="btn btn-danger col-xs-2 col-xs-offset-5">Envoyer</button>
		</div>
	</fieldset>
</form>

<div style="display:none;">
	<img id="contactLoader" src="/bower_components/SVG-Loaders/svg-loaders/tail-spin.svg">
</div>

<script>

	/*====================================
	=            Contact form            =
	====================================*/

		//Todo --> re-make scripts, use OOP
		var block = $('#sectionsCheckboxes');
		var emailBlock = $('#emailBlock');
		var emailInput = emailBlock.find('input');

		var contactForm = $('#contactForm');

		//Catch submit event
		contactForm.on('submit', function(e) 
		{ 
			//Prevents the form being sent
			e.preventDefault();

			var isValid = false;
			var checkbox = block.find(':checkbox:checked');

			//If no section is checked
			if(checkbox.length == 0)
			{
				block.addClass('has-error');
				isValid = false;
			}	

			else
			{
				$('#sectionsCheckboxes :checkbox:checked').removeClass('has-error');
				isValid = true;
			}			

			//If the email isn't valid
			if(!isValidEmailAddress(emailInput.val()))
			{
				emailBlock.addClass('has-error');
				isValid = false;
			}	

			else
			{
				emailBlock.removeClass('has-error');
				isValid = true;
			}	

			if(isValid)
				sendForm();
			
		});
		

		//Sends form using AJAX
		function sendForm()
		{
			$('#textBlock').css('min-height', $(contactForm).css('height'));
			$(contactForm).slideUp('fast', function()
			{
				var data = contactForm.serialize();
				$(contactForm).html($('#contactLoader'));

				$(contactForm).slideDown('fast', function()
				{
					$.ajax(
					{
						type: "POST",
						url: "{{path('ajax_contact')}}",
						data: data,
						success: function(data)
						{
							$(contactForm).slideUp('fast', function()
							{
								$(contactForm).html(data);
								$(contactForm).slideDown('fast')
							});
						}
					});
				});
			});
		}

		//Returns true is the param matches, false otherwise
		function isValidEmailAddress(emailAddress) 
		{
		    var pattern = /^([a-z\d!#$%&'*+\-\/=?^_`{|}~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]+(\.[a-z\d!#$%&'*+\-\/=?^_`{|}~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]+)*|"((([ \t]*\r\n)?[ \t]+)?([\x01-\x08\x0b\x0c\x0e-\x1f\x7f\x21\x23-\x5b\x5d-\x7e\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|\\[\x01-\x09\x0b\x0c\x0d-\x7f\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]))*(([ \t]*\r\n)?[ \t]+)?")@(([a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|[a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF][a-z\d\-._~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]*[a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])\.)+([a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|[a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF][a-z\d\-._~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]*[a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])\.?$/i;
		    return pattern.test(emailAddress);
		};

	/*=====  End of Contact form  ======*/	

</script>