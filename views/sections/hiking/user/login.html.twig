{% extends '/sections/hiking/_shared/layout.html.twig' %}

{% block hiking_content %}
	<h2>
		Connexion
	</h2>
	<div class="row">   
		<form action="{{ path('hiking_admin_login_check') }}" method="post" class="form-vertical col-lg-4 col-lg-offset-4">
		
			<!--======================================
			=            Errors displayer            =
			=======================================-->
			
				{% if error is not null %}
					<div class="panel panel-danger">
						{{ error }}
					</div>
				{% endif %}
			
			<!--====  End of Errors displayer  ====-->

			<!-- Username field -->
			<div class="form-group">
				<label class="control-label" for="_username">
					Identifiant</label>  
				<div class="">
					<input id="_username" name="_username" placeholder="nom de famille" class="form-control input-md" required type="text" value="{{ last_username }}">
				</div>
			</div>

			<!-- Password field -->
			<div class="form-group">
				<label class="control-label" for="_password">Mot de passe</label>
				<div class="">
					<input id="_password" name="_password" placeholder="**********" class="form-control input-md" required type="password">
				</div>
			</div>

			<!-- Send button -->
			<div class="form-group">
				<button id="login" name="login" class="btn btn-success center-block">
					Connexion
				</button>
			</div>

			<!-- Go to register page -->
			<div class="text-center">
				Pas encore de compte ? <a href="{{ path("hiking_register") }}">Je m'inscris !</a>
			</div>
		</form>
	</div>
{% endblock %}