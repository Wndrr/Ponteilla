		<script>
			var isNewsOpen = false;

			$('#toggleNews').on('click', function()
			{
				var newsContent = $('#newsContent');
				var toggleLink = $('#toggleNews');
				var news = $('#news');
				var header = $('#header');

				if(isNewsOpen)
				{
					news.removeClass('opened');
					toggleLink.html('[lire la suite]')
					newsContent.slideUp('fast', function()
					{
						header.css('min-height', 'auto');
						header.css('max-height', 'auto');
					});
				}

				else
				{
					header.css('min-height', header.css('height'));
					header.css('max-height', header.css('height'));
					newsContent.slideDown('fast');
					news.addClass('opened');
					toggleLink.html('[cacher la news]')

				}

				isNewsOpen = !isNewsOpen;
			});
