			<img id="navbar_logo" src="/assets/img/relaxation/logo.png" alt="Relaxation logo">
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block bodyId %}relaxation{% endblock %}

{% block content %}
	<h1>
		SOPHRO-RELAXATION
	</h1>
	<div class="row">
		<div id="picturesContainer" class="col-md-8 col-md-offset-2">
			{% include '/sections/_shared/carousel.twig' with carouselImagesPath %}
		</div>
	</div>
	<div id="textAndContactContainer">
		<div class="col-md-6">
			<div id="textBlock" class="col-md-12">
				<div>
				<h1>
